# Database
DATABASE_URL="postgresql://user:password@localhost:5432/invoice_saas?schema=public"

# Clerk Authentication
# Get these from https://dashboard.clerk.com → Your App → API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Clerk URLs (optional but recommended)
# Configure these in Clerk Dashboard → Paths
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Next.js
# For local: http://localhost:3000
# For production: https://your-domain.vercel.app
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Resend API Key for sending invoice emails
# Sign up at https://resend.com and verify your domain
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=your-email@example.com


